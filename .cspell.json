{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en-US",
  "overrides": [
    {
      "filename": "{*.spec.ts,*.mocks.ts}",
      "words": ["ngneat"]
    },
    {
      "filename": "angular.json",
      "words": ["devkit"]
    }
  ],
  "ignorePaths": [
    ".cspell.json",
    "package.json",
    "pnpm-lock.yaml",
    "coverage/",
    "reports/",
    "node_modules/**",
    "dist/"
  ],
  "words": [
    "lcov",
    "cobertura",
    "compodoc",
    "ngrx"
  ]
}
